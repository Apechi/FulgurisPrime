<!-- res/drawable/frosted_glass.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent white -->
        </shape>
    </item>
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#E0E0E0"/> <!-- Light border -->
        </shape>
    </item>
</layer-list>
